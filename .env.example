# Ansa MES Environment Configuration
# Copy to .env.local and fill in values

# Application
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200

# SAP HANA Connection
HANA_HOST=your-hana-host
HANA_PORT=443
HANA_USER=your-hana-user
HANA_PASSWORD=your-hana-password
HANA_DATABASE=your-database-name

# SAP Service Layer
SL_BASE_URL=https://your-server:50000/b1s/v2
SL_COMPANY=your-company-db
SL_USERNAME=your-sl-username
SL_PASSWORD=your-sl-password

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-chars

# Feature Flags (optional)
FF_USE_NEW_WORK_ORDER_FLOW=true
FF_SHOW_LEGACY_MES_DATA=false
